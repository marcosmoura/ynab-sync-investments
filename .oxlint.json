{
  "extends": ["oxlint:recommended"],
  "rules": {
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./apps/api/**/*",
            "from": "./apps/web/**/*",
            "message": "API should not import from web app - violates module boundaries"
          },
          {
            "target": "./apps/web/**/*",
            "from": "./apps/api/**/*",
            "message": "Web app should not import from API - violates module boundaries"
          },
          {
            "target": "./apps/**/*",
            "from": ["./libs/**/*", "./tools/**/*"],
            "except": ["./libs/shared/**/*"],
            "message": "Apps should only import from shared libraries"
          },
          {
            "target": "./apps/**/*",
            "from": "./packages/**/*",
            "except": ["./packages/shared/**/*"],
            "message": "Apps should only import from shared packages, not internal packages directly"
          }
        ]
      }
    ],
    "import/no-self-import": "error",
    "import/no-cycle": "error",
    "import/no-duplicates": "error"
  }
}
