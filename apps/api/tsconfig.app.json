{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "*": ["./*"],
      "@/*": ["./src/*"]
    },
    "target": "es2021",
    "types": ["node"]
  },
  "exclude": ["src/**/*.e2e.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
