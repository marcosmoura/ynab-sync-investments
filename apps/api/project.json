{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/api/unit"],
      "options": {
        "config": "apps/api/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "options": {
        "cwd": "apps/api",
        "command": "tsc --noEmit -p tsconfig.app.json"
      }
    },

    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec typeorm migration:generate apps/api/src/shared/migrations/Migration -d apps/api/typeorm.config.ts"
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec typeorm migration:run -d apps/api/typeorm.config.ts"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec typeorm migration:revert -d apps/api/typeorm.config.ts"
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec typeorm migration:create apps/api/src/shared/migrations/Migration"
      }
    },
    "migration:show": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec typeorm migration:show -d apps/api/typeorm.config.ts"
      }
    }
  }
}
