{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/api/unit"],
      "options": {
        "config": "apps/api/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "options": {
        "cwd": "apps/api",
        "command": "tsc --noEmit -p tsconfig.app.json"
      }
    },

    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:generate -d typeorm.config.ts",
        "cwd": "apps/api",
        "env": {
          "TS_NODE_PROJECT": "tsconfig.app.json",
          "NODE_OPTIONS": "--require tsconfig-paths/register"
        }
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:run -d typeorm.config.ts",
        "cwd": "apps/api",
        "env": {
          "TS_NODE_PROJECT": "tsconfig.app.json",
          "NODE_OPTIONS": "--require tsconfig-paths/register"
        }
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:revert -d typeorm.config.ts",
        "cwd": "apps/api",
        "env": {
          "TS_NODE_PROJECT": "tsconfig.app.json",
          "NODE_OPTIONS": "--require tsconfig-paths/register"
        }
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:create",
        "cwd": "apps/api",
        "env": {
          "TS_NODE_PROJECT": "tsconfig.app.json",
          "NODE_OPTIONS": "--require tsconfig-paths/register"
        }
      }
    },
    "migration:show": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:show -d typeorm.config.ts",
        "cwd": "apps/api",
        "env": {
          "TS_NODE_PROJECT": "tsconfig.app.json",
          "NODE_OPTIONS": "--require tsconfig-paths/register"
        }
      }
    }
  }
}
